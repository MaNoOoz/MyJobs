<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_hovered="false">
        <shape>
            <solid  android:color="#1c1f2d" />
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />
            <gradient
                android:angle="270"
                android:endColor="#1c1f2d"
                android:gradientRadius="550dp"
                android:startColor="#1c1f2d"
                android:type="radial" />

            <stroke
                android:width="2dp"
                android:color="#ffffff" />

        </shape>
    </item>

    <item>
        <shape>
            <solid  android:color="#1c1f2d" />
            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />
            <gradient
                android:angle="270"
                android:endColor="#525d71"
                android:gradientRadius="250dp"
                android:startColor="#1c1f2d"
                android:type="radial" />

            <stroke
                android:width="1dp"
                android:color="#c0c4c6" />

        </shape>
    </item>


</selector>
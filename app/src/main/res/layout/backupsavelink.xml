            android:layout_height="match_parent"
            android:theme="@style/Base.Widget.AppCompat.ListView">

            <!-- RecyclerView that is responsible for holding a list of task data -->

            <!-- Floating action button that launches AddTaskActivity when clicked -->

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="bottom|end"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="17dp"
                android:background="@color/amber_50"
                android:tint="@android:color/background_light"
                app:backgroundTint="@color/blue_grey_500"
                app:srcCompat="@android:drawable/ic_input_add" />

        </FrameLayout>

        <!--app:srcCompat="@mipmap/ic_add_circle_black_48dp"-->

